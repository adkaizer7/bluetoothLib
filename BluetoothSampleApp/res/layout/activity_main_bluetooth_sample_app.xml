<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.berkeley.sampleapps.bluetoothsampleapp.MainActivityBluetoothSampleApp" >

    <Button
        android:id="@+id/buttonTurnOnBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="21dp"
        android:text="@string/stringTurnOnBT" />

    <Button
        android:id="@+id/buttonEnlistPairedDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonTurnOnBT"
        android:layout_below="@+id/buttonTurnOnBT"
        android:layout_marginTop="14dp"
        android:text="@string/stringEnlistPairedDevices" />

    <Button
        android:id="@+id/buttonStartScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonEnlistPairedDevices"
        android:layout_below="@+id/buttonEnlistPairedDevices"
        android:layout_marginTop="14dp"
        android:text="@string/stringStartScan" />

    <Button
        android:id="@+id/buttonMakeDiscoverable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonStartScan"
        android:layout_centerVertical="true"
        android:text="@string/stringMakeDiscoverable" />

</RelativeLayout>